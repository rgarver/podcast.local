<h1>Editing podcast</h1>

<% form_for(@podcast, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form', :locals => {:f => f} %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<ol>
  <% @podcast.episodes.each do |episode| %>
    <li><%= episode.title %> | <%= link_to "Edit", edit_episode_path(episode) %></li>
  <% end %>
</ol>

<%= link_to "New Episode", new_episode_path %> |
<%= link_to 'Show', @podcast %> |
<%= link_to 'Back', podcasts_path %>